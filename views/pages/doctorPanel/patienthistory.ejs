<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- <link rel="stylesheet" href="/public/fontawesome-free-6.5.2-web/css/all.min.css"> -->
  <link rel="stylesheet" href="/css/sideBar/newSidebar.css">
  <link rel="stylesheet" href="/css/adminPanel/allPatientDetails.css">
  <link rel="stylesheet" href="/css/doctorPanel/a7dashboard.css">
  <title>View Patient History</title>
</head>

<body>

  <div class="a5-container">
    <%- include('../../common/newSidebar/doctorSidebar') %>
      <div class="a5-section">
        <div class="a5-search">
          <div class="a5-searchbox">
            <img src="/assets/adminPanel/icons/search.svg" alt="">
            <input type="text" name="searchUser" id="a5-searchPatient" placeholder="Search Patient name" tabindex="1">
          </div>
          <p id="a5-btn-search" tabindex="2">Search</p>
        </div>

        <div class="a5-all-user">

          <h2>View Patient History</h2>

          <div class="a5-user-table">

            <table id="a5-user-table">

              <tbody id="a5-tbody">
                <tr>
                  <th>Sr no.</th>
                  <th>Name</th>
                  <th>Contact</th>
                  <th>More Details</th>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
        <div class="a7-pagination">
          <span class="a5-btn a7-pagination-btn"><< </span>
              <span class="a5-btn a7-pagination-btn"> < </span>
                  <span class="a5-btn a7-pagination-btn"> </span>
                  <span class="a5-btn a7-pagination-btn">></span>
                  <span class="a5-btn a7-pagination-btn">>></span>
        </div>
      </div>
  </div>
</body>
<script src="/javascript/doctorPanel/sidebar.js"></script>
<script src="/javascript/doctorPanel/patientHistory.js"></script>
<script>

  const fetchData = async () => {
    let fetchdata = await fetch(`/getPatientData`)
    let data = await fetchdata.json()
    let patient_id = 1
    let key = Object.keys(data)
    let count = 1
    let table = document.getElementById("a5-tbody")

    for (let i = 0; i < 5; i++) {
      key.forEach(item => {
        const dtkey = Object.keys(data[item])
        let tr = document.createElement("tr")
        let tdindex = document.createElement("td")
        tdindex.textContent = count++
        tr.appendChild(tdindex)
        dtkey.forEach(ele => {
          let td = document.createElement("td")

          if (ele == "patient_id") {
            td.style.display = 'none'
            patient_id = data[item][ele]
            td.innerText = data[item][ele]
          }
          else {
            td.innerText = data[item][ele]
          }

          tr.appendChild(td)
        })

        let btntd = document.createElement("td")
        let anchortag = document.createElement("p")
        btntd.append(anchortag)
        anchortag.setAttribute("class", "a5-btn")
        anchortag.textContent = `View More`
        anchortag.setAttribute("onclick", `window.location.href = '/viewPatientHistory/${patient_id}'`)
        tr.appendChild(btntd)
        table.appendChild(tr)
      });
    }
  }
  fetchData()
</script>

</html>